generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Modul: Authentication (CMS) ---
enum Role {
  ADMIN
  EDITOR
  AUTHOR
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(EDITOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- Modul: Profile & Personnel (GTK) ---
model EducationPersonnel {
  id         String   @id @default(cuid())
  full_name  String
  nip        String?  @unique
  position   String
  image_url  String?
  sort_order Int      @default(0)
  createdAt  DateTime @default(now())
}

// --- Modul: Articles & Content (Innovation, News, Student Work, etc.) ---
model Post {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  content      String   @db.Text
  category     PostCategory
  thumbnail    String?
  is_published Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum PostCategory {
  INNOVATION
  NEWS
  STUDENT_WORK
  DOUBLE_TRACK
  HUMAS
  OSIS
}

// --- Modul: Graduation (Search Feature) ---
model Graduation {
  id              String   @id @default(cuid())
  nisn            String   @unique
  student_name    String
  exam_number     String?  @unique
  is_graduated    Boolean  @default(false)
  graduation_year Int
  createdAt       DateTime @default(now())
}

// --- Modul: Academic Documents (Files) ---
model AcademicDocument {
  id        String   @id @default(cuid())
  file_name String
  file_path String
  doc_type  DocType
  createdAt DateTime @default(now())
}

enum DocType {
  REGULATION
  SCHEDULE
  CALENDAR
  TEACHING_MATERIAL
}

// --- Modul: Extracurricular ---
model Extracurricular {
  id        String   @id @default(cuid())
  name      String
  coach     String?
  image_url String?
  createdAt DateTime @default(now())
}

// --- Modul: Facilities (Sarpras) ---
model Facility {
  id        String   @id @default(cuid())
  name      String
  quantity  Int      @default(1)
  image_url String?
  createdAt DateTime @default(now())
}